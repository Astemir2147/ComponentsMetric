<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.feature_login.presentation.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/auth_to_components"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.componentsmetric.ui.fragment.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/fragment_home_page" />
    <fragment
        android:id="@+id/navigation_components"
        android:name="com.example.componentsmetric.ui.fragment.AllComponentsFragment"
        android:label="AllComponentsFragment"
        tools:layout="@layout/fragment_all_components" />

</navigation>