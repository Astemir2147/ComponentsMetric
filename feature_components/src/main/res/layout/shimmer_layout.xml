<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginHorizontal="@dimen/Component_item_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/baseRadius"
    android:background="@color/gray"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/Component_item_horizontal_padding"
        android:paddingVertical="@dimen/Component_item_vertical_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:background="@drawable/shimmer_roundc_orner"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="item Title" />

        <TextView
            android:id="@+id/textView2"
            style="@style/ContractsTextStyle.Secondary"
            android:layout_width="99dp"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_roundc_orner"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:text="data Accept Of Item" />

        <TextView
            style="@style/ContractsTextStyle.Secondary"
            android:layout_width="118dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"

            android:background="@drawable/shimmer_roundc_orner"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:text="person Whitch Accept" />

        <TextView
            android:background="@drawable/shimmer_roundc_orner"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>