<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginHorizontal="@dimen/Component_item_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/baseRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/Component_item_horizontal_padding"
        android:paddingVertical="@dimen/Component_item_vertical_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemTitle"
            style="@style/ContractsTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="item Title" />

        <TextView
            android:id="@+id/dataAcceptOfItem"
            style="@style/ContractsTextStyle.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/itemTitle"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle"
            tools:text="data Accept Of Item" />

        <TextView
            android:id="@+id/personWhitchAccept"
            style="@style/ContractsTextStyle.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            app:layout_constraintStart_toStartOf="@+id/dataAcceptOfItem"
            app:layout_constraintTop_toBottomOf="@+id/dataAcceptOfItem"
            tools:text="person Whitch Accept" />

        <TextView
            android:id="@+id/countOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>